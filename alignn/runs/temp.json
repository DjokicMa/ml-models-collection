{
  "dataset": {
    "src": "/mnt/iscsi/MLModels/learning_hybridizing_descriptors_upload/datasets/relaxed_structures_hse_bg/",
    "src_format": "cif",
    "id_prop_file": "id_prop_w_header.csv",
    "target_property": "bandgap_hse",
    "train_ratio": 0.8,
    "val_ratio": 0.1,
    "test_ratio": 0.1
  },
  "model": {
    "name": "alignn",
    "alignn_layers": 4,
    "gcn_layers": 4,
    "atom_embedding_size": 64,
    "edge_embedding_size": 64,
    "triplet_embedding_size": 64,
    "cutoff": 8.0,
    "max_neighbors": 12,
    "classification": false
  },
  "training": {
    "epochs": 300,
    "batch_size": 128,
    "optimizer": {
      "name": "Adam",
      "lr": 0.0014,
      "weight_decay": 1e-5
    },
    "scheduler": {
      "name": "ReduceLROnPlateau",
      "patience": 10,
      "factor": 0.8
    },
    "criterion": "mse",
    "early_stopping": true,
    "patience": 30
  },
  "computing": {
    "cuda": true,
    "distributed": true,
    "num_gpus": 2,
    "parallel_batch_size": 64
  }
}
